<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/weatherbackground"
        tools:context=".WeatherActivity">

        <TextView
            android:id="@+id/city_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <com.qweather.plugin.view.RightLargeView
            android:id="@+id/rl_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <com.qingmei2.library.SlideBottomLayout
            android:id="@+id/slide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            app:handler_height="110dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/sun_and_moon_layout" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="vertical">

                        <include layout="@layout/air_quality_layout" />

                        <include layout="@layout/life_index_layout" />

                        <include layout="@layout/disaster_early_warning_layout" />

                    </LinearLayout>


                </ScrollView>


            </LinearLayout>
        </com.qingmei2.library.SlideBottomLayout>

    </RelativeLayout>
</layout>